[Script]
http-request
regex=^https?:\/\/([^\/]+\.)?(mp|weixin|micromsgad|wechatad|adsame|yuanbao|deepsee|meituan|dp|admaster|baidu|toutiao|byteimg|snssdk|pstatp|ixigua)(\.qq\.com|\.com)(\/.*)?(ad|advertisement|promo|promote|advertise|track|banner|click|stat|report|feed|share|wechat|wx|sns|timeline|moments).*
script-name=block-wechat-ad.js
timeout=6
tag=微信朋友圈公众号广告屏蔽增强

[Script-Content]
#!name=block-wechat-ad.js
console.log("[广告屏蔽] 拦截请求: " + $request.url);
$done({
  status: 204,
  body: "",
  headers: {
    "Content-Type": "text/plain"
  }
});
