# 📦 文件名：block-update.conf
# 🔒 功能：屏蔽 iOS 系统更新、微信升级检查

[Rule]
DOMAIN-SUFFIX,mesu.apple.com,REJECT
DOMAIN,appldnld.apple.com,REJECT
DOMAIN,apptrailers.itunes.apple.com,REJECT
DOMAIN,updates.cdn-apple.com,REJECT
DOMAIN,gdmf.apple.com,REJECT

DOMAIN-SUFFIX,weixin110.qq.com,REJECT
DOMAIN-SUFFIX,dldir1.qq.com,REJECT
DOMAIN-SUFFIX,appsupport.qq.com,REJECT
DOMAIN-SUFFIX,pgdt.gtimg.cn,REJECT
DOMAIN-SUFFIX,pgdt.gtimg.com,REJECT
DOMAIN-SUFFIX,osupdateservice.wechat.com,REJECT
DOMAIN-SUFFIX,apd-pcdnwxlogin-1258344699.file.myqcloud.com,REJECT

[Rewrite]
^https:\/\/support\.weixin\.qq\.com\/cgi-bin\/mmsupport-bin\/checkupdate\? url reject

[Mitm]
hostname = *.qq.com, *.apple.com, *.wechat.com
